{
    "manifest_version": 2,
    "name": "audiovision",
    "description": "Audio visualizations for your browser.",
    "version": "0.0.1",
    "icons": {
        "64": "icons/icon.png"
    },
    "background": {
        "scripts": ["bin/socket.io.min.js", "background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/watch*"],
            "js": ["src/Timer.js", "src/Color.js", "src/Screen.js", "src/Controls.js", "src/Visualizer.js", "src/Sound.js", "src/Video.js", "main.js"],
            "css": ["css/w3.css", "css/google-fonts.css", "css/font-awesome.min.css", "css/visualizer.css"]
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "browserAction/actions.html",
        "default_title": "Audiovision"
    },
    "page_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "pageAction/index.html",
        "default_title": "Audiovision"
    },
    "options_ui": {
        "page": "options/index.html"
    },
    "permissions": ["http://localhost/*"]
}
